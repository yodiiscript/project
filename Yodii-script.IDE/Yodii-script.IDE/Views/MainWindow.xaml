<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Collections="clr-namespace:System.Collections;assembly=mscorlib"
        xmlns:local="clr-namespace:Yodii_script.IDE.View_Models"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="Yodii_script.IDE.MainWindow"
        Title="MainWindow" Height="720" Width="600">

    <Window.DataContext>
        <local:MainWindowVM/>
    </Window.DataContext>

    <Grid Background="LightGray">
        <ListBox x:Name="ScriptCol" HorizontalAlignment="Left" Margin="3,50,3,15" Width="175" 
			ItemsSource="{Binding Source}" DisplayMemberPath="FullName" Background="Black" Foreground="White"/>

        <Button x:Name="button_addScript" Content="Save Script" Command="{Binding AddScriptCommand}" CommandParameter="{Binding Text, ElementName=entry_ScriptName}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="button_addScript_Click" Margin="3,0,0,0"/>
        <TextBox x:Name="entry_ScriptName" HorizontalAlignment="Left" Height="23" Margin="3,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button_editScript" Content="Edit Script" HorizontalAlignment="Left" Margin="78,0,0,0" VerticalAlignment="Top" Width="75" Click="button_editScript_Click"/>
        <Button x:Name="button_newScript" Content="New Script" HorizontalAlignment="Left" Margin="153,0,0,0" VerticalAlignment="Top" Width="70" RenderTransformOrigin="0.485,-0.347" Click="button_newScript_Click"/>
        <Button x:Name="button_deleteScript" Content="Remove script" Command="{Binding DeleteButtonCommand}" CommandParameter="{Binding SelectedItem, ElementName=ScriptCol}" HorizontalAlignment="Left" Margin="223,0,0,0" VerticalAlignment="Top" Width="93" Click="button_deleteScript_Click"/>
        <avalonEdit:TextEditor
			xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
			x:Name="ScriptEditor"
			FontFamily="Consolas"
			SyntaxHighlighting="C#"
			FontSize="11pt" Margin="223,52,179,50" Visibility="Visible" TextChanged="SyncMarginWithLines"/>
        <TextBox x:Name="entry_ScriptDesc" HorizontalAlignment="Left" Height="23" Margin="128,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <DataGrid x:Name="BreakPointsMargin" AutoGenerateColumns="False" MinWidth="25" MinHeight="20" Margin="183,52,0,0" MaxWidth="65" ScrollViewer.CanContentScroll="False" 
                   CanUserAddRows="False" UseLayoutRounding="False" HeadersVisibility="None" HorizontalScrollBarVisibility="Disabled" SelectionUnit="Cell"
                   CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserSortColumns="False" Width="38" Height="171" VerticalAlignment="Top" VerticalContentAlignment="Stretch" 
                   VerticalScrollBarVisibility="Visible" SelectionMode="Single" RowHeight="17.1" HorizontalAlignment="Left" MaxColumnWidth="20" RowBackground="#00000000" 
                   RowDetailsVisibilityMode="Visible" Background="#02000000" HorizontalGridLinesBrush="#FF53B269" VerticalGridLinesBrush="{x:Null}" IsSynchronizedWithCurrentItem="True" Foreground="#FFC3C3C3" CellEditEnding="test_datagrid" GridLinesVisibility="Horizontal" CanUserResizeRows="False" FontWeight="Bold" >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Foreground="#FF6CEA25"/>
            </DataGrid.Columns>

        </DataGrid>

    </Grid>

</Window>

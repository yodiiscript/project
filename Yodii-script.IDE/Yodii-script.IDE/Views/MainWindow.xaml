<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Collections="clr-namespace:System.Collections;assembly=mscorlib" x:Class="Yodii_script.IDE.MainWindow"
        xmlns:local="clr-namespace:Yodii_script.IDE.View_Models"
        Title="MainWindow" Height="720" Width="720" MinWidth="720" MinHeight="720" MaxWidth="720" MaxHeight="720">

    <Window.DataContext>
        <local:MainWindowVM/>
    </Window.DataContext>

    <Window.Resources>
        <local:MultiConverter x:Key="MultiConverter" />
    </Window.Resources>

    <Grid Background="LightGray" MinWidth="592" MinHeight="689">
        <ListBox x:Name="ScriptCol" HorizontalAlignment="Left" Margin="3,50,3,15" Width="175" 
                 ItemsSource="{Binding Source}" DisplayMemberPath="FullName" Background="Black" Foreground="White"/>

        <Label Content="Name:" HorizontalAlignment="Left" Margin="200,53,0,0" VerticalAlignment="Top"/>
        <Label Content="Description:" HorizontalAlignment="Left" Margin="200,100,0,0" VerticalAlignment="Top"/>
        <Label Content="Source Code:" HorizontalAlignment="Left" Margin="200,146,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button_addScript" Content="Save" Command="{Binding AddScriptCommand}"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="359,654,0,0">
            <Button.CommandParameter>
                <MultiBinding Converter="{StaticResource MultiConverter}">
                    <Binding Path="Text" ElementName="entry_ScriptName"/>
                    <Binding Path="Document" ElementName="ScriptEditor"/>
                </MultiBinding>
            </Button.CommandParameter>
        </Button>
        <Button x:Name="button_editScript" Content="Edit" Command="{Binding EditScriptCommand}" CommandParameter="{Binding ElementName=ScriptCol, Path=SelectedItem}" HorizontalAlignment="Left" Margin="5,14,0,0" VerticalAlignment="Top" Width="79"/>
        <Button x:Name="button_newScript" Content="Clear" Command="{Binding ClearScriptCommand}" HorizontalAlignment="Left" Margin="462,654,0,0" VerticalAlignment="Top" Width="70" RenderTransformOrigin="0.485,-0.347" Click="button_newScript_Click"/>
        <Button x:Name="button_deleteScript" Content="Delete" Command="{Binding DeleteScriptCommand}" CommandParameter="{Binding ElementName=ScriptCol, Path=SelectedIndex}" HorizontalAlignment="Left" Margin="99,14,0,0" VerticalAlignment="Top" Width="79"/>
        <TextBox x:Name="entry_ScriptName" Text="{Binding Path=NameSource, Mode=TwoWay}" HorizontalAlignment="Left" Height="23" Margin="278,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="415"/>
        <TextBox x:Name="entry_ScriptName_Copy" Text="{Binding Path=DescriptionSource, Mode=TwoWay}" HorizontalAlignment="Left" Height="38" Margin="278,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="415"/>
        <avalonEdit:TextEditor
        
    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
    Name="ScriptEditor"
    FontFamily="Consolas"
    SyntaxHighlighting="C#"
    FontSize="11pt" Margin="200,177,10,49" Visibility="Visible"/>


    </Grid>

</Window>